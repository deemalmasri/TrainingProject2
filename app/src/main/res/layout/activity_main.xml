<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F5F5"
    tools:context=".MainActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="8dp">


        <SearchView
            android:id="@+id/search_view"
            android:layout_width="401dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="#F4F4F4"
            android:iconifiedByDefault="false"
            android:focusedByDefault="false"
            android:inputType="text"
            android:queryHint="Search " />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_below="@+id/card_11"
        android:paddingLeft="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost effective"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold">

        </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Cost_effectiveView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
            </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rlMain2"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_below="@+id/rlMain"
        android:paddingLeft="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bit Priceir "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold">

        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Bit_PriceirveView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rlMain3"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_below="@+id/rlMain2"
        android:paddingLeft="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Big spender"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold">

        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Big_spendereView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>



</RelativeLayout>